<h1 id="addtitle">Add Product</h1>
<div class="seller_form container">
    <div class="add_image">
        <img src="images/add_product.svg" alt="add_product_img" id="addProductimg">
    </div>
    <div>
        <form>
            <div class="mb-3">
                <label for="storename" class="form-label">Store Name</label>
                <input type="text" class="form-control" id="storename" name="">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <select class="form-select" aria-label="Default select example">
                    <option selected disabled="disabled">Product Category</option>
                    <option value="Fruits and Vegetables">Fruits and Vegetables</option>
                    <option value="Bakery items and dairy">Bakery items and Dairy</option>
                    <option value="Snacks and beverages">Snacks and Beverages</option>
                    <option value="Egg meat and fish">Egg Meat and Fish</option>
                    <option value="Frozen Food">Frozen Food</option>
                    <option value="snacks">Snacks</option>
                    <option value="staples">Staples</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="productName" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="productName">
            </div>
            <div class="form-floating">
                <textarea class="form-control" placeholder="Write about product" id="productDescription"
                    style="height: 100px"></textarea>
                <label for="productDescription">Product Description</label>
            </div>
            <div class="mb-3">
                <label for="mrp" class="form-label">MRP</label>
                <input type="tel" class="form-control" id="mrp">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="tel" class="form-control" id="price">
            </div>
            <div class="mb-3">
                <label for="pincodes" class="form-label">Available Pincodes</label>
                <input type="text" class="form-control" id="pincodes">
            </div>
            <form action="?" method="POST">
                <div class="g-recaptcha" data-sitekey="6LdWy4QbAAAAACgD057mZhtFy8pRxhGAJ_UTw_vX"></div>
                <br />
            </form>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>